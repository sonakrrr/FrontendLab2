$color-primary = #2E7D32
$color-secondary = #66BB6A
$color-light = #AED581
$color-background = #E8F5E9
$color-white = white

* 
  box-sizing: border-box
  margin: 0
  padding: 0
  font-family: Arial, sans-serif

body
  background-color: $color-background
  color: #333
  min-height: 100vh
  display: block

.container
  width: 100%
  margin: 0 auto

.header
  background-color: $color-primary
  padding: 10px
  border-bottom: 2px solid $color-light
  overflow: hidden

.logo
  font-size: 24px
  font-weight: bold
  color: $color-white
  float: left

.button-container
  text-align: center
  margin: 20px 0

.main-content
  padding: 20px

.intro
  padding: 20px
  background-color: $color-white
  border: 2px solid $color-light
  margin-bottom: 20px
  overflow: hidden

.intro-text
  float: left
  width: 65%
  padding-right: 20px

.intro-text h1
  font-size: 36px
  margin-bottom: 20px
  color: $color-primary

.intro-text p
  font-size: 18px
  line-height: 1.5
  margin-bottom: 20px

.join-button-container
  position: absolute
  top: 5px
  right: 5px
  z-index: 1000

.register-button
  padding: 10px 20px
  background-color: $color-secondary
  border: none
  border-radius: 5px
  cursor: pointer
  color: $color-white

.register-button:hover
  background-color: darken($color-secondary, 10%)

.intro-image
  float: right
  width: 30%

.intro-image img
  width: 100%
  height: auto
  border: 2px solid $color-light
  border-radius: 10px

@media screen and (max-width: 768px)
  .intro
    overflow: visible

  .intro-text
    float: none
    width: 100%
    padding-right: 0
    text-align: center

  .intro-image
    float: none
    width: 100%
    margin-top: 20px

.features
  overflow: hidden
  margin: 40px 0
  background-image: url('/images/ukraine.jpg')
  background-size: cover
  background-position: center
  padding: 40px 20px
  border: 2px solid $color-light

.feature-card
  border: 2px solid $color-light
  padding: 20px
  background-color: $color-white
  width: 30%
  float: left
  margin-right: 2%
  text-align: center

.feature-card:nth-child(3n)
  margin-right: 0

.guide
  text-align: center

.guide h2
  font-size: 28px
  margin-bottom: 20px
  color: $color-primary

.steps
  overflow: hidden
  margin: 20px 0

.step
  border: 2px solid $color-light
  padding: 20px
  background-color: $color-white
  width: 18%
  float: left
  margin-right: 2%
  text-align: center

.step:nth-child(5n)
  margin-right: 0

@media (max-width: 768px)
  .features,
  .steps
    float: none

  .feature-card,
  .step
    width: 100%
    margin-bottom: 20px

.footer
  padding: 20px
  background-color: $color-white
  border-top: 2px solid $color-light
  margin-top: 20px
  width: 100%

.footer-logo
  font-size: 24px
  color: $color-primary

.footer ul
  list-style-type: none
  padding: 0
  width: 60%
  margin: 0 auto
  display: flex
  flex-wrap: wrap

.footer ul li
  width: 31%
  margin: 5px
  padding: 10px
  text-align: center
  border-radius: 5px
  background-color: $color-secondary
  color: $color-white
  transition: background-color 0.3s, color 0.3s

.footer ul li:hover
  background-color: darken($color-secondary, 10%)
  color: $color-white
